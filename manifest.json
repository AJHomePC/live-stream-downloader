{
  "manifest_version": 2,
  "version": "0.1.4",
  "name": "Live Stream Downloader",
  "description": "Detect and Download M3U8 HLS Streams (HTTP Live Stream) in multiple threads to your local disk",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*.flv*",
    "*://*/*.avi*",
    "*://*/*.wmv*",
    "*://*/*.mov*",
    "*://*/*.mp4*",
    "*://*/*.pcm*",
    "*://*/*.wav*",
    "*://*/*.mp3*",
    "*://*/*.aac*",
    "*://*/*.ogg*",
    "*://*/*.wma*",
    "*://*/*.m3u8*",
    "downloads",
    "notifications",
    "contextMenus"
  ],
  "homepage_url": "https://add0n.com/hls-downloader.html",
  "background": {
    "scripts": [
      "downloads/file.js",
      "downloads/get.js",
      "downloads/manager.js",
      "background.js"
    ]
  },
  "icons": {
    "16": "data/icons/16.png",
    "19": "data/icons/19.png",
    "32": "data/icons/32.png",
    "38": "data/icons/38.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png",
    "512": "data/icons/512.png"
  },
  "browser_action": {
    "default_title": "Download a new HLS Stream or Abort active tab's Job"
  },
  "web_accessible_resources": [
    "data/scripts/user.html"
  ]
}
